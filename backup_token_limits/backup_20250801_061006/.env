# CentralizedAgentFramework Environment Variables Template
# Copy this file to .env and configure your settings

# ================================
# Core Framework Configuration
# ================================
CAF_MODE=development
CAF_DEBUG=false
CAF_LOG_LEVEL=INFO

# ================================
# Database Configuration
# ================================
CAF_DATABASE_TYPE=sqlite
CAF_DATABASE_PATH=./output/centralized_agent.db
CAF_SAMPLE_DATABASE_PATH=./output/sample_verilog.db

# ================================
# Output and Logging Configuration
# ================================
CAF_OUTPUT_DIR=./output
CAF_LOG_FILE=./logs/caf_framework.log
CAF_ENABLE_DETAILED_LOGGING=true

# ================================
# LLM Provider Configuration
# ================================
# Primary LLM Provider (dashscope, openai, ollama)
CAF_LLM_PROVIDER=dashscope
CAF_LLM_MODEL=qwen-turbo
CAF_LLM_TEMPERATURE=0.7
CAF_LLM_MAX_TOKENS=32768
CAF_LLM_TIMEOUT=120

# OpenAI Configuration
CIRCUITPILOT_OPENAI_API_KEY=your_openai_api_key_here
CAF_OPENAI_MODEL=gpt-4
CAF_OPENAI_BASE_URL=https://api.openai.com/v1

# DashScope Configuration (Alibaba Qwen)
CIRCUITPILOT_DASHSCOPE_API_KEY=sk-66ed80a639194920a3840f7013960171
CAF_DASHSCOPE_MODEL=qwen-turbo
CAF_DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# Ollama Configuration (Local)
CAF_OLLAMA_BASE_URL=http://localhost:11434
CAF_OLLAMA_MODEL=llama3.1

# ================================
# Coordinator Configuration
# ================================
CAF_MAX_ITERATIONS=20
CAF_CONVERSATION_TIMEOUT=600
CAF_MAX_WORKFLOW_ITERATIONS=5
CAF_QUALITY_THRESHOLD=0.7

# NextSpeaker Decision Parameters
CAF_DECISION_TEMPERATURE=0.4
CAF_DECISION_MAX_TOKENS=1000

# Task Analysis Parameters
CAF_ANALYSIS_TEMPERATURE=0.3
CAF_ANALYSIS_MAX_TOKENS=1500

# ================================
# Agent Configuration
# ================================
CAF_AGENT_TIMEOUT=120.0
CAF_MAX_FILE_CACHE_SIZE=100
CAF_ENABLE_CACHE=true

# Tool Call Configuration
CAF_TOOL_CALL_TIMEOUT=30.0
CAF_MAX_TOOL_RETRIES=3

# ================================
# Database Tool Configuration
# ================================
CAF_DB_CONNECTION_POOL_SIZE=5
CAF_DB_QUERY_TIMEOUT=30
CAF_DB_RETRY_ATTEMPTS=3
CAF_DB_RETRY_DELAY=1.0

# Database Search Limits
CAF_DEFAULT_SEARCH_LIMIT=10
CAF_MAX_SEARCH_LIMIT=50

# ================================
# File and Path Configuration
# ================================
CAF_VERILOG_OUTPUT_DIR=./output/verilog
CAF_TEST_OUTPUT_DIR=./output/tests
CAF_REVIEW_OUTPUT_DIR=./output/reviews
CAF_DATABASE_RESULTS_DIR=./output/database_results

# File Cache Configuration
CAF_FILE_CACHE_ENABLED=true
CAF_FILE_CACHE_MAX_SIZE=100
CAF_FILE_CACHE_TTL=3600

# ================================
# Performance and Resource Configuration
# ================================
CAF_MAX_CONCURRENT_AGENTS=5
CAF_MAX_CONCURRENT_TASKS=3
CAF_MEMORY_LIMIT=4GB
CAF_CPU_LIMIT=4

# Async Configuration
CAF_ASYNC_TIMEOUT=300
CAF_MAX_RETRIES=3
CAF_RETRY_DELAY=1.0

# ================================
# Testing Configuration
# ================================
CAF_TEST_DATABASE_PATH=./test_output/test.db
CAF_TEST_OUTPUT_DIR=./test_output
CAF_TEST_LOG_LEVEL=DEBUG

# Test Timeout Settings
CAF_TEST_TIMEOUT=60
CAF_INTEGRATION_TEST_TIMEOUT=120

# ================================
# Development and Debug Configuration
# ================================
CAF_ENABLE_PROFILING=false
CAF_ENABLE_METRICS=true
CAF_METRICS_INTERVAL=60

# Debug Settings
CAF_DEBUG_AGENT_COMMUNICATION=false
CAF_DEBUG_DATABASE_QUERIES=false
CAF_DEBUG_TOOL_CALLS=false

# ================================
# Security Configuration
# ================================
CAF_ENABLE_QUERY_SANITIZATION=true
CAF_MAX_QUERY_LENGTH=1000
CAF_ALLOWED_FILE_EXTENSIONS=.v,.sv,.vh,.json,.md,.txt

# ================================
# Integration Configuration
# ================================
# External Tool Integration
CAF_ENABLE_EXTERNAL_TOOLS=false
CAF_EXTERNAL_TOOL_TIMEOUT=60

# Webhook Configuration (for future use)
CAF_WEBHOOK_URL=
CAF_WEBHOOK_SECRET=

# ================================
# Experimental Features
# ================================
CAF_ENABLE_ADVANCED_COORDINATION=true
CAF_ENABLE_LEARNING_OPTIMIZATION=false
CAF_ENABLE_PERFORMANCE_MONITORING=true